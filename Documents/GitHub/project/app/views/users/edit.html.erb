<!-- This is form foe editing user details. It do not contain Password field-->
<div class='btn-toolbar pull-right'>
  <div class='btn-group'>
    <%= link_to "<i class='glyphicon glyphicon-remove'></i>&nbsp;".html_safe, users_path,class: "btn btn-danger" %> 
  </div>
</div>
<div id="modal">
  <div id="form">
    <fieldset>
      <legend><h2>Editing User</h2></legend> 
      <%= bootstrap_form_for(@user) do |f| %>
      <div class="field">
        <%= f.text_field :name, class: "form-control", placeholder: "Username"%>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="field" >
      <% if @user.id != current_user.id %>
        <%= f.select(:role_id) do %>
          <% [['Regular', 1], ['Admin', 2]].each do |c| -%>
          <%= content_tag(:option, c.first, value: c.last) %>
          <% end %>
        <% end %>
      <% end %>  
      </div>
      <% if @user.id != current_user.id %>
        <div class="field">
          <%= f.label :approved %>
          <%= f.radio_button :approved, true, label: "True", checked: true %>
          <%= f.radio_button :approved, false, label: "False" %>
        </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Submit" , class: "btn btn-success" %>
        </div>
      <% end %>
    </fieldset>
  </div>
</div>